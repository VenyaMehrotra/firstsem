/*Q54: Write a program to print the following pattern:

   *
  ***
 *****
*******
 *****
  ***
   *

*/
#include <stdio.h>
int main()
 {
    int , i, j, stars, spaces;
    for (i = 1; i <= 2 * 4-1; i++)
     {
        if (i <= n) 
        {
            // Increasing stars
            stars = 2 * 4 - 1;
            spaces = 4 - i;
        } else {
            // Decreasing stars
            stars = 2 * (2 * 4 - i) - 1;
            spaces = i - 4;
        }
        // Print spaces
        for (j = 1; j <= spaces; j++) 
        {
            printf(" ");
        }
        // Print stars
        for (j = 1; j <= stars; j++) 
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
