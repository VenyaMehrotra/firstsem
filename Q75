//Q75 Add two matrices
#include<stdio.h>
int main()
{
    int A[50][50],B[50][50],sum[50][50],m,n,i,j;
    printf("Enter the order of matrices A and B (row,column) = ");
    scanf("%d %d",&m,&n);
    printf("Enter elements of Matrix A= \n");
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            scanf("%d",&A[i][j]);
        }
    }
    printf("Enter elements of Matrix B=\n");
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            scanf("%d",&B[i][j]);
        }
    }
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            sum[i][j]=A[i][j] + B[i][j];
        }
    }
    printf("Sum of the matrices A and B=\n");
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            printf("%d ",sum[i][j]);  
        }
        printf("\n");
    }
    return 0;
}
