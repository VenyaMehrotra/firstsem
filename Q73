/*Q73: Find the sum of each row of a matrix and store it in an array.
Sample Test Cases:
Input 1:
2 3
1 2 3
4 5 6
Output 1:
6 15
*/
#include<stdio.h>
int main()
{
    int A[100][100], sum[100];
    int m, n, i, j;
    printf("Enter the order of matrix A (row,column) = ");
    scanf("%d %d",&m,&n);
    printf("Enter elements of Matrix=");
    for(i = 0; i < m; i++)
    {
        sum[i] = 0; // Initializing sum for each row
        for(j = 0 ; j < n; j++)
        {
            scanf("%d",&A[i][j]);
            sum[i] = sum[i]+A[i][j];
        }
    }
    printf("Sum of each row of the matrix is=\n");
    for(i = 0; i < m; i++)
    {
        printf("Sum of row %d= %d\n", i + 1, sum[i]);
    }
    return 0;
}
